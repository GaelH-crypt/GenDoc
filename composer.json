{
    "name": "gendoc/app",
    "description": "Application de génération de documents personnalisés avec authentification LDAP",
    "type": "project",
    "keywords": ["document", "generation", "word", "pdf", "ldap", "php"],
    "license": "MIT",
    "authors": [
        {
            "name": "Gendoc Team",
            "email": "contact@gendoc.local"
        }
    ],
    "require": {
        "php": ">=8.1",
        "phpoffice/phpword": "^1.0",
        "dompdf/dompdf": "^2.0",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.0",
        "symfony/ldap": "^6.0",
        "symfony/security": "^6.0",
        "symfony/http-foundation": "^6.0",
        "symfony/routing": "^6.0",
        "twig/twig": "^3.0",
        "ramsey/uuid": "^4.0",
        "intervention/image": "^2.7",
        "phpmailer/phpmailer": "^6.8",
        "league/csv": "^9.0",
        "spatie/array-to-xml": "^2.16"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "phpdocumentor/phpdocumentor": "^3.3",
        "symfony/var-dumper": "^6.0",
        "filp/whoops": "^2.15"
    },
    "autoload": {
        "psr-4": {
            "Gendoc\\": "src/"
        },
        "psr-0": {
            "": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gendoc\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=Unit",
        "test:integration": "phpunit --testsuite=Integration",
        "test:coverage": "phpunit --coverage-html tests/coverage/html --coverage-text tests/coverage/coverage.txt",
        "test:coverage-clover": "phpunit --coverage-clover tests/coverage/clover.xml",
        "cs": "phpcs src/ tests/",
        "cs:fix": "phpcbf src/ tests/",
        "stan": "phpstan analyse src/",
        "docs": "phpdoc -d src/ -t docs/api",
        "post-install-cmd": [
            "chmod -R 755 storage/",
            "chmod -R 755 public/uploads/",
            "mkdir -p storage/logs",
            "mkdir -p storage/templates",
            "mkdir -p storage/documents",
            "touch storage/logs/.gitkeep",
            "touch storage/templates/.gitkeep",
            "touch storage/documents/.gitkeep"
        ],
        "post-update-cmd": [
            "chmod -R 755 storage/",
            "chmod -R 755 public/uploads/"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packagist.org"
        }
    ]
} 